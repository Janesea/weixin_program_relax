}
/*发送按钮*/
.send-btn{
  width: 20%;
  float: right;
  height: 70rpx;
  margin: 15rpx;
  line-height: 70rpx;
  background: #1AAD19;
  color: #fff;
  border: 1px solid #e3e3e3;
}