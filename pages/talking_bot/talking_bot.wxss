.page{
  position: relative;
}
.talk{
  padding: 10rpx;
  overflow: scroll;
  border-bottom: 1px solid #e5e5e5;
  height: 100%;
  box-sizing: border-box;
  background: #e8e8e8;
}

.talk-box{
  position: relative;
  overflow: hidden;
  padding: 10rpx;
}
/*拓展下面部分，让其可以下拉*/
.talk-box-extend{
  height: 500rpx;
}
/*机器人聊天*/
.head{
  display: block;
  height: 75rpx;
  width: 75rpx;
  box-sizing: border-box;
  padding: 5rpx;
  border: 1px solid #CECECE;
  border-radius: 50%;
  position: absolute;
  top: 0;
  margin: 5rpx;
  background: #fff;
}
.head-bot{
  left: 0;
}
.head-user{
  right: 0;
}
/*对话框*/
.sentence{
  margin: 0 80rpx;
  border-radius: 10rpx;
  border: 1px solid #e3e3e3;
  padding: 10rpx;
}
.sentence view{
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  border: 0;
  border-top: 1px solid #e3e3e3;
  border-right: 1px solid #e3e3e3;
  border-radius: 0;
}
/*机器人的对话框*/
.sentence-bot{
  background: #fff;
  float: left;
  position: relative;

}
.sentence-bot view{
  background: #fff;
  top: 15rpx;
  left: -6rpx;
  transform: rotate(-135deg);
}
/*用户对话框*/
.sentence-user{
  background: #9fe44b;
  float: right;
  position: relative;

}
.sentence-user view{
  background: #9fe44b;
  transform: rotate(45deg);
  top: 15rpx;
  right: -6rpx;
}

/*发送框*/
.send{
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  background: #fff;
}
.send-text{
  position: relative;
  width: 75%;
  float: left;
}
.send-text input{
  display: block;
  float: left;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  margin-left: 15rpx;
  margin-top: 15rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  width: 100%;
  padding: 10rpx;
}
.send-text button{
  width: 20rpx;
  height: 20rpx;
  position:absolute;
  right: 10rpx;
  top: 50%;
  margin-top: -10rpx;
}
